<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#031940">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/imbt_close_editvault"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif-medium"
                android:text="edit"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/im_done_edit_website"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toStartOf="@+id/img_generate_password"
                android:layout_toLeftOf="@+id/img_generate_password"
                android:src="@drawable/ic_add" />

            <ImageView
                android:id="@+id/img_generate_password"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_launcher_foreground" />

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_tile_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:theme="@style/AppTheme">

            <EditText
                android:id="@+id/ed_tile_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="sans-serif"
                android:hint="Title"
                android:inputType="text"
                android:maxLines="1"
                android:paddingRight="60dp"
                android:textColor="#031940"
                android:textSize="16sp"
                android:textStyle="normal" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/layout_error_tile_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="27dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:text="Require Field"
                android:textColor="#ff5b5b"
                android:textSize="11sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_add" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imbt_clear_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_add"
            android:visibility="gone" />
        </RelativeLayout>


        <Button
            android:id="@+id/bt_selete_edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ic_launcher_background"
            android:paddingBottom="2dp"
            android:text="Delete"
            android:textAllCaps="false"
            android:textSize="15sp" />

</LinearLayout>